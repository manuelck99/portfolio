{
  "name": "@portfolio/source",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "format": "prettier --write .",
    "lint": "nx run-many -t lint -p api ui --max-warnings 0",
    "lint:fix": "nx run-many -t lint -p api ui --fix --max-warnings 0",
    "lint:all": "nx run-many -t lint --all --max-warnings 0",
    "lint:fix:all": "nx run-many -t lint --all --fix --max-warnings 0",
    "build": "nx run-many -t build -p api ui",
    "build:ui": "nx run ui:build",
    "build:api": "nx run api:build",
    "build:all": "nx run-many -t build --all",
    "serve": "nx run-many -t serve -p api ui",
    "serve:ui": "nx run ui:serve",
    "serve:api": "nx run api:serve",
    "test": "nx run-many -t test -p api ui",
    "test:ui": "nx run ui:test",
    "test:api": "nx run api:test",
    "test:ui-e2e": "nx run ui-e2e:e2e && npm run db:down",
    "test:all": "nx run-many -t test --all",
    "db:up": "docker compose -f docker-compose.local.yml up -d",
    "db:down": "docker compose -f docker-compose.local.yml down -v",
    "db:start": "docker compose -f docker-compose.local.yml start",
    "db:stop": "docker compose -f docker-compose.local.yml stop",
    "db:codegen": "npm run db:up && npm run db:migrate:newest && kysely-codegen --dialect postgres --url postgres://postgres:postgres@localhost:5432/postgres && cp node_modules/kysely-codegen/dist/db.d.ts libs/db/src/lib/db-schema.types.ts && npm run db:down",
    "db:migrate": "cd libs/db/src/lib && ts-node migration.ts",
    "db:migrate:newest": "cd libs/db/src/lib && ts-node migration.ts newest",
    "db:migrate:oldest": "cd libs/db/src/lib && ts-node migration.ts oldest",
    "db:migrate:none": "cd libs/db/src/lib && ts-node migration.ts none",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,html,css,scss,json,md}": "prettier --write",
    "*.{js,ts,html,css,scss}": "eslint"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.6",
    "@angular-devkit/core": "^18.2.6",
    "@angular-devkit/schematics": "^18.2.6",
    "@angular-eslint/eslint-plugin": "^18.3.1",
    "@angular-eslint/eslint-plugin-template": "^18.3.1",
    "@angular-eslint/template-parser": "^18.3.1",
    "@angular/cli": "^18.2.6",
    "@angular/compiler-cli": "^18.2.6",
    "@angular/language-service": "^18.2.6",
    "@nestjs/schematics": "^10.1.4",
    "@nestjs/testing": "^10.4.3",
    "@nx/angular": "^19.8.2",
    "@nx/devkit": "^19.8.2",
    "@nx/eslint": "^19.8.2",
    "@nx/eslint-plugin": "^19.8.2",
    "@nx/jest": "^19.8.2",
    "@nx/js": "^19.8.2",
    "@nx/nest": "^19.8.2",
    "@nx/node": "^19.8.2",
    "@nx/playwright": "^19.8.2",
    "@nx/web": "^19.8.2",
    "@nx/webpack": "^19.8.2",
    "@nx/workspace": "^19.8.2",
    "@playwright/test": "^1.47.2",
    "@schematics/angular": "^18.2.6",
    "@swc-node/register": "^1.10.9",
    "@swc/core": "^1.7.26",
    "@swc/helpers": "^0.5.13",
    "@testcontainers/postgresql": "^10.13.1",
    "@types/jest": "^29.5.13",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.16.5",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@typescript-eslint/utils": "^7.16.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-playwright": "^1.6.2",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-preset-angular": "^14.2.4",
    "kysely-codegen": "^0.16.8",
    "lint-staged": "^15.2.10",
    "nx": "^19.8.2",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "testcontainers": "^10.13.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@angular/animations": "^18.2.6",
    "@angular/common": "^18.2.6",
    "@angular/compiler": "^18.2.6",
    "@angular/core": "^18.2.6",
    "@angular/forms": "^18.2.6",
    "@angular/platform-browser": "^18.2.6",
    "@angular/platform-browser-dynamic": "^18.2.6",
    "@angular/router": "^18.2.6",
    "@nestjs/common": "^10.4.3",
    "@nestjs/core": "^10.4.3",
    "@nestjs/platform-express": "^10.4.3",
    "kysely": "^0.27.4",
    "luxon": "^3.5.0",
    "pg": "^8.13.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "tslib": "^2.7.0",
    "zod": "^3.23.8",
    "zone.js": "^0.14.3"
  },
  "volta": {
    "node": "20.17.0",
    "npm": "10.8.3"
  }
}
